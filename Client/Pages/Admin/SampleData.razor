@page "/Admin/SampleData"
@inject IStringLocalizer<Resource> Localizer
@inject ICategoryEndpoint CategoryEndpoint
@inject IEraEndpoint EraEndpoint
@inject IArtifactEndpoint ArtifactEndpoint
@inject IVendorEndpoint VendorEndpoint
@inject IUserEndpoint UserEndpoint
@inject IVendorEndpoint VendorEndpoint
@inject AuthenticationStateProvider AuthProvider
@attribute [Authorize(Policy = "Admin")]

<PageTitle>@Localizer["sample-data"]</PageTitle>

<MudGrid>
    @if (string.IsNullOrWhiteSpace(errorMessage) is false)
    {
        <MudAlert Severity="Severity.Error">
            @errorMessage
        </MudAlert>
    }
    <MudItem xs="12">
        <MudItem>
            <MudText Typo="Typo.h6">
                @Localizer["categories"]
            </MudText>
            <MudDivider Class="mt-3 mb-3" />
        </MudItem>
        <MudItem>
            <MudButton OnClick="GenerateCategoriesAsync" Variant="Variant.Filled"
                       Color="Color.Primary" Disabled="DisableButton(categoriesCreated)">
                @Localizer["create-categories"]
            </MudButton>
        </MudItem>
    </MudItem>
    <MudDivider Class="mb-3 mt-3" />
    <MudItem xs="12">
        <MudItem>
            <MudText Typo="Typo.h6">
                @Localizer["eras"]
            </MudText>
            <MudDivider Class="mt-3 mb-3" />
        </MudItem>
        <MudItem>
            <MudButton OnClick="GenerateErasAsync" Variant="Variant.Filled"
                       Color="Color.Primary" Disabled="DisableButton(erasCreated)">
                @Localizer["create-eras"]
            </MudButton>
        </MudItem>
    </MudItem>
    <MudItem xs="12">
        <MudItem>
            <MudText Typo="Typo.h6">
                @Localizer["artifacts"]
            </MudText>
            <MudDivider Class="mt-3 mb-3" />
        </MudItem>
        <MudItem>
            <MudButton OnClick="GenerateArtifactAsync" Variant="Variant.Filled"
                       Color="Color.Primary" Disabled="DisableButton(artifactsCreated)">
                @Localizer["create-artifacts"]
            </MudButton>
        </MudItem>
    </MudItem>
    <MudItem xs="12">
        <MudItem>
            <MudText Typo="Typo.h6">
                @Localizer["vendors"]
            </MudText>
            <MudDivider Class="mt-3 mb-3" />
        </MudItem>
        <MudItem>
            <MudButton OnClick="GenerateVendorsAsync" Variant="Variant.Filled" 
                       Color="Color.Primary" Disabled="DisableButton(vendorsCreated)">
                @Localizer["create-vendors"]
            </MudButton>
        </MudItem>
    </MudItem>
</MudGrid>


