@page "/authentication/{action}"

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <AuthView AuthState="AuthState.Logging"/>
    </LoggingIn> 
    <CompletingLoggingIn>
        <AuthView AuthState="AuthState.CompletingLogin" />
    </CompletingLoggingIn>
    <LogInFailed>
        <AuthView AuthState="AuthState.LoginFailed" />
    </LogInFailed>
    <LogOut>
        <AuthView AuthState="AuthState.Logout" />
    </LogOut>
    <CompletingLogOut>
        <AuthView AuthState="AuthState.CompletingLogout" />
    </CompletingLogOut>
    <LogOutFailed>
        <AuthView AuthState="AuthState.LogoutFailed" />
    </LogOutFailed>
    <LogOutSucceeded>
        <AuthView AuthState="AuthState.LogoutSuceeded" />
    </LogOutSucceeded>
    <Registering>
        <AuthView AuthState="AuthState.Registering" />
    </Registering>
</RemoteAuthenticatorView>

@code{
    [Parameter] public string? Action { get; set; }
}
