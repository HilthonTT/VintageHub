@page "/"
@inject IStringLocalizer<Resource> Localizer
@inject IArtifactEndpoint ArtifactEndpoint
@inject ICategoryEndpoint CategoryEndpoint
@inject IEraEndpoint EraEndpoint
@inject IUserDataVerifier UserVerifier
@inject IDialogService DialogService
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Home - VintageHub</PageTitle>

@if (string.IsNullOrWhiteSpace(errorMessage) is false)
{
    <MudAlert Severity="Severity.Error" Class="mb-2" Elevation="5" Variant="Variant.Outlined">
        @errorMessage
    </MudAlert>
}

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" Class="text-center">
        <MudAvatar Size="Size.Large" Style="height:150px; width:150px; font-size:2rem; background-color: #EDE7F6" Elevation="5">
            <MudImage Src="images/hat-cowboy-solid.svg" Alt="Vintage Hub" Fluid="true" />
        </MudAvatar>
        <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Vintage Hub</MudText>
    </MudItem>
    <MudItem xs="12" Class="mt-2">
        <MudPaper Class="pa-3 rounded" Elevation="5">
            <MudGrid>
                <MudItem xs="6">
                    <div class="d-flex justify-content-start">
                        <MudStack Row="true" Spacing="3">
                            <MudButton StartIcon="@Icons.Material.Filled.List"
                                       OnClick="LoadWishListPage">
                                @Localizer["wishlist"]
                            </MudButton>
                        </MudStack>
                    </div>
                </MudItem>
                <MudItem xs="6">
                    <div class="d-flex justify-content-end">
                        <MudStack Row="true" Spacing="3">
                            <MudButton StartIcon="@Icons.Material.Filled.Discount"
                                       OnClick="LoadDiscountPage">
                                @Localizer["discounts"]
                            </MudButton>
                            <MudButton StartIcon="@Icons.Material.Filled.Shop"
                                       OnClick="LoadOrdersPage">
                                @Localizer["my-orders"]
                            </MudButton>
                            <MudButton StartIcon="@Icons.Material.Filled.DesignServices"
                                       OnClick="LoadCustomerServicePage">
                                @Localizer["customer-service"]
                            </MudButton>
                            <MudButton StartIcon="@Icons.Material.Filled.Language"
                                       OnClick="LoadLanguageDialogAsync">
                                @Localizer["language"]
                            </MudButton>
                        </MudStack>
                    </div>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudGrid Class="mt-5" Spacing="5">
    <MudItem xs="12">
        <div class="d-flex justify-content-between">
            <MudText Typo="Typo.h4" GutterBottom="true" Class="fw-bold text-uppercase">Artifacts</MudText>
            <div>
                <MudButton OnClick="LoadListingPage" StartIcon="@Icons.Material.Filled.More">
                    @Localizer["see-more"]
                </MudButton>
                @if (artifacts is null)
                {
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">
                            @Localizer["loading"]
                        </span>
                    </div>
                }
            </div>
        </div>
        <MudGrid>
            @if (artifacts is not null)
            {
                <MudVirtualize Items="artifacts?.ToList()" Context="a">
                    <ArtifactTemplate @key="a.Id" Artifact="a" />
                </MudVirtualize>
            }
        </MudGrid>
    </MudItem>

    <MudDivider />
    <MudItem xs="12">
        <div class="d-flex justify-content-between">
            <MudText Typo="Typo.h4" GutterBottom="true" Class="fw-bold text-uppercase">
                @Localizer["categories"]
            </MudText>
            @if (categories is null)
            {
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">@Localizer["loading"]</span>
                </div>
            }
        </div>
        <MudGrid>
            @if (categories is not null)
            {
                <MudVirtualize Items="categories" Context="c" OverscanCount="10">
                    <CategoryTemplate @key="c.Id" Category="c" />
                </MudVirtualize>
            }
        </MudGrid>
    </MudItem>

    <MudDivider />
    <MudItem xs="12">
        <div class="d-flex justify-content-between">
            <MudText Typo="Typo.h4" GutterBottom="true" Class="fw-bold text-uppercase">
                @Localizer["eras"]
            </MudText>
            @if (eras is null)
            {
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">@Localizer["loading"]</span>
                </div>
            }
        </div>
        <MudGrid>
            @if (eras is not null)
            {
                <MudVirtualize Items="eras" Context="e" OverscanCount="10">
                    <EraTemplate @key="e.Id" Era="e" />
                </MudVirtualize>
            }
        </MudGrid>
    </MudItem>
</MudGrid>

