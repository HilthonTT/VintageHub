@inject IStringLocalizer<Resource> Localizer

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" role="alert" Class="centered-layout">
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" Class="text-center">
                <MudText Typo="Typo.h4" Class="fw-bold text-uppercase">
                    <MudProgressCircular Color="Color.Primary" Style="height:70px;width:70px;" Indeterminate="true" />
                </MudText>
                <MudText Typo="Typo.h4" Class="text-uppercase" GutterBottom>
                    @Localizer["loading"]
                </MudText>
                <MudText Typo="Typo.subtitle1" Class="mt-1">
                    @if (ShowDescription)
                    {
                        @Localizer["loading-description"]
                    }       
                </MudText>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public bool ShowDescription { get; set; } = true;
}