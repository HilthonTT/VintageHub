@inject IStringLocalizer<Resource> Localizer
@inject NavigationManager Navigation

<MudItem xs="3">
    <MudCard Class="m-2">
        <MudCardMedia Image="@((string.IsNullOrWhiteSpace(imageSource) ? "https://dummyimage.com/600x400/000/fff" : imageSource))"
                      Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h5">
                <MudTooltip>
                    <ChildContent>
                        @truncatedName
                    </ChildContent>
                    <TooltipContent>
                        <MudText>
                            @Category.Name
                        </MudText>
                    </TooltipContent>
                </MudTooltip>
            </MudText>
            <MudText Typo="Typo.body2">
                <MudTooltip>
                    <ChildContent>
                        @truncatedDescription
                    </ChildContent>
                    <TooltipContent>
                        <MudText>
                            @Category.Description
                        </MudText>
                    </TooltipContent>
                </MudTooltip>
            </MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton OnClick="OnCategoryClick" Variant="Variant.Text" Color="Color.Primary">
                @Localizer["learn-more"]
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>


