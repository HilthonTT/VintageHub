@inject IStringLocalizer<Resource> Localizer

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" role="alert" Class="centered-layout">
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" Class="text-center">
                <MudText Typo="Typo.h4" Class="fw-bold text-uppercase">
                    <MudIcon Icon="@Icons.Material.Filled.Create" Style="font-size: 7rem"
                             Size="Size.Large" Color="Color.Primary" />
                </MudText>
                <MudText Typo="Typo.h4" Class="text-uppercase" GutterBottom>
                    @GetTitle()
                </MudText>
                <MudText Typo="Typo.subtitle1" Class="mt-1">
                    @GetDescription()
                </MudText>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>

