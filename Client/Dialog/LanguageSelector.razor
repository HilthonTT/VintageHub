@inject IJSRuntime JSRuntime
@inject IStringLocalizer<Resource> Localizer
@inject NavigationManager Navigation

<MudDialog Options="@options">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Language" Class="mr-3 mb-n1" />
            @Localizer["select-language"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudSelect @bind-Value="culture"
                   Label="@Localizer["language"]"
                   HelperText=@Localizer["select-language-helper"]>
            @foreach (var c in cultures)
            {
                <MudSelectItem Value="@c">
                    @c.DisplayName
                </MudSelectItem>
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Cancel">
            @Localizer["cancel"]
        </MudButton>
    </DialogActions>
</MudDialog>


