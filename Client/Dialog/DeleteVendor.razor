@inject IStringLocalizer<Resource> Localizer
@inject IVendorEndpoint VendorEndpoint
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<MudDialog Options="options">
    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudItem>
                <MudText>
                    @Localizer["delete-vendor"]
                </MudText>
                <MudText>
                    @Localizer["delete-description"]
                </MudText>
            </MudItem>
            <MudDivider Class="mt-3 mb-3" />
            <MudItem>
                <MudTextField @bind-Value="typedVendorName" Placeholder=@Localizer["vendor-name"]
                              Immediate="true" Variant="Variant.Filled" />
                @if (string.IsNullOrWhiteSpace(errorMessage) is false)
                {
                    <MudAlert Severity="Severity.Error" Class="mt-2">
                        @errorMessage
                    </MudAlert>
                }
            </MudItem>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Cancel">
            @Localizer["cancel"]
        </MudButton>
        <MudButton Color="Color.Error" StartIcon="@Icons.Material.Filled.Delete"
                   Variant="Variant.Filled" OnClick="DeleteVendorAsync">
            @Localizer["delete"]
        </MudButton>
    </DialogActions>
</MudDialog>


