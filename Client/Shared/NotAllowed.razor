@inject IStringLocalizer<Resource> Localizer
@inject NavigationManager Navigation

<PageTitle>@Localizer["not-authorized"]</PageTitle>

<MudGrid Justify="Justify.Center" Class="mt-10 mb-5">
    <MudItem xs="12" role="alert" Class="mt-auto">
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" Class="text-center">
                <MudText Typo="Typo.h4" Class="fw-bold text-uppercase">
                    <MudIcon Icon="@Icons.Material.Filled.NotAccessible" Style="font-size: 7rem"
                             Size="Size.Large" Color="Color.Error" />
                </MudText>
                <MudText Typo="Typo.h4" Class="text-uppercase" GutterBottom>
                    @Localizer["not-authorized"]
                </MudText>
                <MudText Typo="Typo.subtitle1" Class="mt-1">
                    @Localizer["not-authorized-description"]
                </MudText>
            </MudItem>
            <MudItem xs="12" Class="text-center">
                <MudFab OnClick="LoadHomePage" Color="Color.Error"
                        StartIcon="@Icons.Material.Filled.Home" Label=@Localizer["home"] Style="width: 25rem" />
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>


